<div id="notes-modal" class="modal fade modal-dialog modal-sm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <h2 id="notes-modal-header">Notes for Article: <span id="article-id"></span></h2>
    </div>
    <div class="modal-body">
        <div id="notes-container">
            <div class="article-note empty">
                There are no notes for this article
            </div>
        </div>
        <form>
            <textarea id="new-note" placeholder="Enter a note"></textarea>
        </form>
    </div>

    <div class="modal-footer">
        <button class="pure-button" data-dismiss="modal" aria-hidden="true">Close</button>
        <button id="note-submit-button" class="pure-button pure-button-primary">Submit</button>
    </div>
</div>
